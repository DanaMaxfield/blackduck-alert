<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    <changeSet author="mau" id="migrate-jira-server-auth-method">
        <preConditions onFail="MARK_RAN">
            <not>
                <sqlCheck expectedResult="0">
                    SELECT COUNT(*) FROM alert.configuration_jira_server
                    WHERE authorization_method = ''
                </sqlCheck>
            </not>
        </preConditions>
        <sql dbms="postgresql" stripComments="true">
            UPDATE alert.configuration_jira_server
            SET authorization_method = 'BASIC'
            WHERE authorization_method = ''
        </sql>
    </changeSet>
</databaseChangeLog>